<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>HireDriverServlet</servlet-name>
        <servlet-class>za.ac.tut.web.HireDriverServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ReleaseDriverServlet</servlet-name>
        <servlet-class>za.ac.tut.web.ReleaseDriverServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FindDriverServlet</servlet-name>
        <servlet-class>za.ac.tut.web.FindDriverServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ModifyDriverServlet</servlet-name>
        <servlet-class>za.ac.tut.web.ModifyDriverServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FindToEditDriverServlet</servlet-name>
        <servlet-class>za.ac.tut.web.FindToEditDriverServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetDriverServlet</servlet-name>
        <servlet-class>za.ac.tut.web.GetDriverServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetLongestServlet</servlet-name>
        <servlet-class>za.ac.tut.web.GetLongestServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RecordTripServlet</servlet-name>
        <servlet-class>za.ac.tut.web.RecordTripServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewPartialTripRecord</servlet-name>
        <servlet-class>za.ac.tut.web.ViewPartialTripRecord</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewAllTripRecords</servlet-name>
        <servlet-class>za.ac.tut.web.ViewAllTripRecords</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>za.ac.tut.web.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HireDriverServlet</servlet-name>
        <url-pattern>/HireDriverServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReleaseDriverServlet</servlet-name>
        <url-pattern>/ReleaseDriverServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FindDriverServlet</servlet-name>
        <url-pattern>/FindDriverServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ModifyDriverServlet</servlet-name>
        <url-pattern>/ModifyDriverServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FindToEditDriverServlet</servlet-name>
        <url-pattern>/FindToEditDriverServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetDriverServlet</servlet-name>
        <url-pattern>/GetDriverServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetLongestServlet</servlet-name>
        <url-pattern>/GetLongestServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RecordTripServlet</servlet-name>
        <url-pattern>/RecordTripServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewPartialTripRecord</servlet-name>
        <url-pattern>/ViewPartialTripRecord.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewAllTripRecords</servlet-name>
        <url-pattern>/ViewAllTripRecords.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <security-constraint>
        <display-name>supervisor</display-name>
        <web-resource-collection>
            <web-resource-name>supervisorResorces</web-resource-name>
            <description>Resorces for the supervisor</description>
            <url-pattern>/hire_driver.jsp</url-pattern>
            <url-pattern>/modify_driver.jsp</url-pattern>
            <url-pattern>/find_driver.jsp</url-pattern>
            <url-pattern>/driver_long_hours.jsp</url-pattern>
            <url-pattern>/driver_longest_service.jsp</url-pattern>
            <url-pattern>/release_driver.jsp</url-pattern>
            <url-pattern>/view_all_trip_outcome.jsp</url-pattern>
            <url-pattern>/find_to_edit.jsp</url-pattern>
            <url-pattern>/get_driver.jsp</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description>supervisor Authentication</description>
            <role-name>supervisor</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>driver</display-name>
        <web-resource-collection>
            <web-resource-name>driverResources</web-resource-name>
            <description>Resourcesfor a driver</description>
            <url-pattern>/record_trip_details.jsp</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description>driver authentication</description>
            <role-name>driver</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>FRealm</realm-name>
        <form-login-config>
            <form-login-page>/login.jsp</form-login-page>
            <form-error-page>/login_error.jsp</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description>Resources that supervisor can access</description>
        <role-name>supervisor</role-name>
    </security-role>
    <security-role>
        <description>Resources that driver can access</description>
        <role-name>driver</role-name>
    </security-role>
     <error-page>
        <error-code>403</error-code>
        <location>/access_denied.jsp</location>
    </error-page>
</web-app>
